



<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.6/dt-1.10.12/r-2.1.0/datatables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/responsive/2.1.0/js/dataTables.responsive.min.js"></script>

<script>

var table_id = null;
document.addEventListener("turbolinks:load", function() {
    table_id = $("#table_id").DataTable({
      responsive: {
          details: {
              type: 'column',
              target: 'tr'
          }
      },
      columnDefs: [ {
          className: 'control',
          orderable: false,
          targets: 0
      } ],
      deferRender: true,
      order: [ 1, 'asc' ],
        "createdRow": function ( row, data, index ) {
            if ( data[6] === 'yes' ) {
                $('td', row).eq(6).addClass('yes');
            } else if (data[6] === 'out') {
                $('td', row).eq(6).addClass('out');
            }
        },
        "bDestroy": true,
        "bSortClasses": false,
        "pageLength": 50
    } );
});

document.addEventListener("turbolinks:before-cache", function() {
  if ($("#table_id_wrapper").length === 1) {
    table_id.destroy();
  }
});


</script>


<table id="table_id" class="table table-striped table-bordered dt-responsive nowrap">
  <thead>
      <tr>
          <th></th>
          <th>Job position</th>
          <th>Company</th>
          <th>URL</th>
          <th>Location</th>
          <th>Rating</th>
          <th>Status</th>
          <th class="none">More info</th>
      </tr>
  </thead>
  <tbody>
    <tr>
    <% if current_user %>
    <% if @jobs.any? %>
      <% @jobs.each do |job| %>
          <td></td>
          <td><%= link_to job.position, job_path(job) %></td>
          <td><%= job.company%></td>
          <td><a href="<%=job.url%>">visit</td>
          <td><%= job.location%></td>
          <td><%= job.rating%></td>
          <td><%= job.status%></td>
          <td class="none"><%= job.info %></td>
        </tr>
      <% end %>
      <% end %>
    <% else %>
      No jobs yet
    <% end %>
  </tbody>
  </table>
